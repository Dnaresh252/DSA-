
#include <bits/stdc++.h>
using namespace std;
bool check(int a[],int n)

{
	for(int i=1;i<n;i++)
	{
		if(a[i]>=a[i-1])
		{
			
		}
		else
		{
			return false;
		}
	}

return true;
}
int main() {
   int n;
